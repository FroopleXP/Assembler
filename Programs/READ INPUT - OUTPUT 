; ==========================
; READING AN INPUT
; WRITTEN BY: CONNOR EDWARDS
; ==========================

MOVW 0XFF			; SETTING NUMBER OF INPUTS TO WORKING REGISTER
MOVWR TRISA			; SETTING THE INPUTS OF PORTA

REP:				
    MOVRW PORTA		; READ VALUE AT PORTA AND SET TO WORKING REGISTER
    NOP				; TIMING
    NOP 			; TIMING
    MOVWR PORTB		; MOVE VALUE IN WORKING REGISTER TO THE OUTPUT
JMP REP